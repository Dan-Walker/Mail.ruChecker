{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Mail.ru Checker",
    "description": "Отображение количества непрочитанных сообщений в почтовом ящике Mail.ru",
    "version": "3.3.6",
	"manifest_version": 2,
    "background": {
        "page": "background.html"
      },

    "browser_action": {
        "default_title": "Mail.ru Checker",
        "default_icon": "img/ico_panel.png"
    },
    "icons": {
        "16": "img/16_activ.png",
        "48": "img/48_activ.png",
        "128": "img/128_activ.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",

    "permissions": [
        "tabs",
        "idle",
        "notifications",
        "http://*.mail.ru/",
        "cookies",
        "http://*/*",
        "https://*/*"
    ],
    "options_page": "options.html"
}